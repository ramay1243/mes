# Dockerfile для Render (опционально)
FROM node:18-alpine

WORKDIR /app

# Копируем файлы зависимостей
COPY package*.json ./
COPY prisma ./prisma/

# Устанавливаем зависимости
RUN npm ci

# Генерируем Prisma Client
RUN npx prisma generate

# Копируем остальные файлы
COPY . .

# Собираем приложение
RUN npm run build

# Экспортируем порт
EXPOSE 3000

# Запускаем приложение
CMD ["npm", "start"]

